<Window x:Class="_12_WPF_Ampel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12_WPF_Ampel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="200">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Rectangle Width="200" Height="400" Fill="Gray"/>
        <StackPanel Margin="0,-400,0,0" Width="209" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse x:Name="red_light" Height="100" Width="100" Fill="LightGray" Margin="0,20,0,0"/>
            <Ellipse x:Name="yellow_light" Height="100" Width="100" Fill="LightGray" Margin="0,20,0,20"/>
            <Ellipse x:Name="green_light" Height="100" Width="100" Fill="LightGray"/>
        </StackPanel>
    </StackPanel>
</Window>
