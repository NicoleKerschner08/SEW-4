<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Width="140">Hosting Port:</Label>
            <TextBox x:Name="TxtHostingPort" Width="100" Text="5000"/>
            <Button Width="100" x:Name="btn_start" Click="btn_start_Click">Start</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Width="140">Hosting Port:</Label>
            <TextBox x:Name="TxtRemoteServerPort" Width="100" Text="5000"/>
            <Button Width="100" Click="btn_connect">Connect</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBox x:Name="TxtSendingMessage" Width="400" KeyDown="TxtSendingMessage_enter"/>
            <ListView x:Name="LstMessages" Width="400"  Height="200"/>
        </StackPanel>
    </StackPanel>
</Window>