<Window x:Class="wpf_threading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_threading"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation = "Horizontal">
            <Label Width=" 180" Margin=" 5">Startseite</Label>
            <TextBox Width="100" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation = "Horizontal">
            <Label Width=" 180" Margin=" 5"></Label>
            <Button Width="100" Margin="5" Click="click_start">Start</Button>
            <Button Width="100" Margin="5" Click="click_stop">Abbrechen</Button>
        </StackPanel>
    </StackPanel>

</Window>
