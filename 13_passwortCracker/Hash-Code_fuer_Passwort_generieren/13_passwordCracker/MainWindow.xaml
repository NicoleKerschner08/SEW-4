<Window x:Class="_13_passwordCracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_13_passwordCracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Password:" Width="100"  Margin="10" FontSize="18"/>
            <TextBox x:Name="tb_password" Width="200" Height="30" FontSize="18"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Salt:" Width="100"  Margin="10" HorizontalAlignment="Left" FontSize="18" />
            <TextBox x:Name="tb_salt" Width="200" Height="30" HorizontalAlignment="Center" FontSize="18"></TextBox>
        </StackPanel>
        
        <Button Click="btn_compute" Height="30" Width="300" FontSize="18">Compute</Button>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Hash Code:" Width="100"  Margin="10" HorizontalAlignment="Left" FontSize="18" />
            <TextBox x:Name="tb_hashcode" Width="200" Height="30" HorizontalAlignment="Center" FontSize="18"></TextBox>
        </StackPanel>
    </StackPanel>
</Window>
