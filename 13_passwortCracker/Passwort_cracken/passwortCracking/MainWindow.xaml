<Window x:Class="passwortCracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:passwortCracking"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Label Content="Hash:" Width="100"  Margin="10" FontSize="18"/>
        <TextBox x:Name="tb_hash" Width="200" Height="30" FontSize="18"></TextBox>
    </StackPanel>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Label Content="Salt:" Width="100"  Margin="10" HorizontalAlignment="Left" FontSize="18" />
        <TextBox x:Name="tb_salt" Width="200" Height="30" HorizontalAlignment="Center" FontSize="18"></TextBox>
    </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Start:" Width="100"  Margin="10" HorizontalAlignment="Left" FontSize="18" />
            <TextBox x:Name="tb_start" Width="200" Height="30" HorizontalAlignment="Center" FontSize="18"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Ende:" Width="100"  Margin="10" HorizontalAlignment="Left" FontSize="18" />
            <TextBox x:Name="tb_end" Width="200" Height="30" HorizontalAlignment="Center" FontSize="18"></TextBox>
        </StackPanel>
        <Button Click="btn_crack" Height="30" Width="300" FontSize="18">Crack</Button>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Label Content="Passwort:" Width="100"  Margin="10" HorizontalAlignment="Left" FontSize="18" />
        <TextBox x:Name="tb_password" Width="200" Height="30" HorizontalAlignment="Center" FontSize="18"></TextBox>
    </StackPanel>
        <ProgressBar x:Name="pb_progress" Height="25" Width="300" Margin="10" Minimum="0" Maximum="100" Value="0"/>

    </StackPanel>
</Window>
