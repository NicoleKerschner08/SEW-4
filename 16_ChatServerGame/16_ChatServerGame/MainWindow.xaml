<Window x:Class="_16_ChatServerGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16_ChatServerGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0,20,0,0" Width="990">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btn_schere" Width="300" VerticalAlignment="Top" Margin="0,0,20,0" FontSize="30" Click="btn_schere_Click">Schere</Button>
            <Button x:Name="btn_stein" Width="300" Margin="0,0,20,0" Click="btn_stein_Click" FontSize="30">Stein</Button>
            <Button x:Name="btn_papier" Width="300" Click="btn_papier_Click" FontSize="30">Papier</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="300" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold">Deine Wahl:</TextBlock>
            <TextBlock HorizontalAlignment="Right" Width="296" FontSize="30" FontWeight="Bold" Margin="300,0,0,0">Wahl des Gegners:</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
            <Image x:Name="img_your_choice" Width="300" Height="300" />
            <Image x:Name="img_vs" Width="300" Height="300" Source="pack://application:,,,/Images/vs.png"/>
            <Image x:Name="img_enemy_choice" Width="300" Height="300"/>
        </StackPanel>
    </StackPanel>
</Window>
